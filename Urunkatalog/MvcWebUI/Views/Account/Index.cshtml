@model IEnumerable<MvcWebUI.Models.UserOrderModel>
@{
    ViewBag.Title = "Index";
}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h2>Sipariş Bilgileriniz</h2>
            <hr />
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>
                            Sipariş Numarası
                        </th>
                        <th>
                            Sipariş Tarihi
                        </th>
                        <th>
                            Ödeme Miktarı
                        </th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.SiparisNo</td>
                            <td>@item.SiparisTarihi.ToShortDateString()</td>
                            <td>@item.OdemeTutarı</td>
                            <td>@item.OrderState</td>
                            <td>
                                @Html.ActionLink("Details","Details",new {id = item.Id },new {@class="btn btn-primary"})
                            </td>
                        </tr>
                    }


                </tbody>
            </table>
        </div>
    </div>
</div>

